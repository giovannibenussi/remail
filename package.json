{
  "name": "remail",
  "type": "module",
  "source": "src/index.ts",
  "exports": {
    "types": "./dist/index.d.ts",
    "require": "./dist/index.cjs",
    "default": "./dist/index.modern.js"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.module.js",
  "unpkg": "./dist/index.umd.js",
  "scripts": {
    "dev": "microbundle watch --jsx React.createElement --jsxFragment React.Fragment --globals react=React",
    "build-old": "rollup -c --bundleConfigAsCjs",
    "dev-old": "rollup -c --bundleConfigAsCjs --watch",
    "tailwind": "tailwindcss -i ./src/input.css -o ./src/styles.css --watch"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.14",
    "@remix-run/react": "^1.18.0",
    "cssnano": "^6.0.1",
    "microbundle": "^0.15.1",
    "postcss": "^8.4.27",
    "postcss-cssnext": "^3.1.1",
    "postcss-nested": "^6.0.1",
    "postcss-simple-vars": "^7.0.1",
    "react": ">=16.0.0",
    "react-dom": ">=16.0.0",
    "rollup-plugin-postcss": "^4.0.2",
    "tailwindcss": "^3.3.3"
  },
  "peerDependencies": {
    "@remix-run/react": "^1.18.0",
    "react": ">=16.0.0",
    "react-dom": ">=16.0.0"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.15",
    "@heroicons/react": "^2.0.18",
    "@rollup/plugin-commonjs": "^25.0.3",
    "@rollup/plugin-node-resolve": "^15.1.0",
    "@rollup/plugin-typescript": "^11.1.2",
    "@types/react": "^18.2.15",
    "classnames": "^2.3.2",
    "rollup": "^3.26.3",
    "rollup-plugin-dts": "^5.3.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-terser": "^7.0.2",
    "typescript": "^5.1.6"
  }
}
